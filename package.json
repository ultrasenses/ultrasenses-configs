{
  "name": "ultrasenses-utils",
  "version": "1.0.0",
  "description": "Ultrasenses utils",
  "repository": {
    "type": "git",
    "url": "https://github.com/ultrasenses/ultrasenses-utils.git"
  },
  "author": "Ultrasenses <contact.ultrasenses@gmail.com>",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "build": "yarn run lerna:build",
    "eslint:check": "eslint . --ignore-path .gitignore",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:build": "lerna run build",
    "lerna:publish": "lerna bootstrap && lerna run build && lerna publish from-package --conventional-commits --yes",
    "update:version": "lerna version --conventional-commits --no-git-tag-version"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "lerna": "^3.22.1"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
